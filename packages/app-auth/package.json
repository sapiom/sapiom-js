{
  "name": "@sapiom/app-auth",
  "version": "0.1.0",
  "description": "Auth SDK for apps built on Sapiom's Auth0 gateway â€” login, connect, and token management",
  "keywords": [
    "sapiom",
    "sdk",
    "auth",
    "auth0",
    "oauth",
    "jwt"
  ],
  "homepage": "https://github.com/sapiom/sapiom-js/tree/main/packages/app-auth#readme",
  "bugs": {
    "url": "https://github.com/sapiom/sapiom-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapiom/sapiom-js.git",
    "directory": "packages/app-auth"
  },
  "license": "MIT",
  "author": "Sapiom",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:esm-pkg",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:esm-pkg": "echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc --watch --project tsconfig.cjs.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@sapiom/core": "workspace:*",
    "@sapiom/fetch": "workspace:*",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
