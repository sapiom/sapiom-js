{
  "name": "@sapiom/langchain",
  "version": "0.1.0",
  "description": "LangChain integration for Sapiom SDK",
  "keywords": [
    "sapiom",
    "sdk",
    "langchain",
    "ai",
    "agent",
    "llm",
    "typescript"
  ],
  "homepage": "https://github.com/sapiom/sdk/tree/main/packages/langchain#readme",
  "bugs": {
    "url": "https://github.com/sapiom/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapiom/sdk.git",
    "directory": "packages/langchain"
  },
  "license": "MIT",
  "author": "Sapiom",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc --watch --project tsconfig.build.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "devDependencies": {
    "@langchain/anthropic": "^0.3.30",
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/openai": "^1.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "@langchain/core": ">=0.3.0 <1.0.0",
    "@langchain/langgraph": ">=0.2.0 <1.0.0",
    "@sapiom/core": "^0.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
