{
  "name": "@sapiom/core",
  "version": "0.1.0",
  "description": "Core SDK for Sapiom API - HTTP adapters and transaction management",
  "keywords": [
    "sapiom",
    "sdk",
    "api",
    "typescript",
    "http",
    "axios",
    "fetch",
    "payment",
    "402"
  ],
  "homepage": "https://github.com/sapiom/sdk/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/sapiom/sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapiom/sdk.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "author": "Sapiom",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./axios": {
      "types": "./dist/axios.d.ts",
      "import": "./dist/axios.js",
      "require": "./dist/axios.js"
    },
    "./fetch": {
      "types": "./dist/fetch.d.ts",
      "import": "./dist/fetch.js",
      "require": "./dist/fetch.js"
    },
    "./node-http": {
      "types": "./dist/node-http.d.ts",
      "import": "./dist/node-http.js",
      "require": "./dist/node-http.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc --watch --project tsconfig.build.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "decimal.js": "^10.6.0"
  },
  "devDependencies": {
    "@fetch-mock/jest": "^0.2.17",
    "@types/decimal.js": "^7.4.3",
    "@types/jest": "^29.5.14",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "axios": "^1.7.9",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2",
    "undici": "^7.16.0"
  },
  "peerDependencies": {
    "axios": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
