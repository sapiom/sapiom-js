{
  "name": "@sapiom/node-http",
  "version": "0.1.0",
  "description": "Node.js HTTP/HTTPS integration for Sapiom SDK",
  "keywords": [
    "sapiom",
    "sdk",
    "node",
    "http",
    "https",
    "payment",
    "402"
  ],
  "homepage": "https://github.com/sapiom/sapiom-javascript/tree/main/packages/node-http#readme",
  "bugs": {
    "url": "https://github.com/sapiom/sapiom-javascript/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sapiom/sapiom-javascript.git",
    "directory": "packages/node-http"
  },
  "license": "MIT",
  "author": "Sapiom",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc --watch --project tsconfig.build.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@sapiom/core": "^0.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "sideEffects": false
}
